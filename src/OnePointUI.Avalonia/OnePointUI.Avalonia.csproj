<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TrimMode>none</TrimMode>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Avalonia" Version="11.3.10" />
      <PackageReference Include="Avalonia.Skia" Version="11.3.10" />
      <PackageReference Include="SkiaSharp" Version="2.88.9" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Assets\Fonts\SegoeFluentIcons.ttf" />
      <EmbeddedResource Include="Assets\Fonts\SegoeFluentIcons.ttf" />
      <None Remove="Assets\Shader\bubble.sksl" />
      <EmbeddedResource Include="Assets\Shader\bubble.sksl" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Assets\Fonts\DinPro.ttf" />
      <AvaloniaResource Include="Assets\OnePointUI.Icon.png" />
      <None Remove="Assets\Shader\voronoi.sksl" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Styling\Controls\OnePointControls\Notice\Info\NoticeBox.axaml.cs">
        <DependentUpon>NoticeBox.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Styling\Controls\OnePointControls\Notice\Info\NoticePanel.axaml.cs">
        <DependentUpon>NoticePanel.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Assets\Shader\voronoi.sksl" />
    </ItemGroup>

</Project>
