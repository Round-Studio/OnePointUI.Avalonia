<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <StackPanel>
                <TextBox Text="TextBox" Margin="5"
                         Watermark="0000"/>
                <TextBox Text="TextBox" Margin="5" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="6"></Setter>
        <Setter Property="MinWidth" Value="120"></Setter>
        <Setter Property="Height" Value="32"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"></Setter>
        <Setter Property="CaretBrush" Value="{DynamicResource PrimaryForegroundBrush}"></Setter>
        <Setter Property="SelectionBrush" Value="{DynamicResource AccentBackgroundBrush}"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="SelectionForegroundBrush" Value="{DynamicResource PrimaryForegroundBrush}"></Setter>
        <Setter Property="Cursor" Value="Ibeam"></Setter>
        
        <Setter Property="Template">
            <ControlTemplate>
                <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                      VerticalAlignment="{TemplateBinding VerticalAlignment}">
                    <Border Name="Path_BackgroundBorder"  
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalAlignment}"
                            BorderThickness="2"
                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Background="{DynamicResource PrimaryBackgroundBrush}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <Border Name="Path_Background"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Background="{DynamicResource PrimaryBackgroundOverBrush}"
                                Opacity="0"></Border>
                    </Border>
                    
                    <TextBlock Name="PART_Watermark"
                               Text="{TemplateBinding Watermark}"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Opacity="0"
                               Margin="7">
                        <TextBlock.Transitions>
                            <Transitions>
                                <DoubleTransition Duration="0:0:0.18"
                                                  Property="Opacity"></DoubleTransition>
                            </Transitions>
                        </TextBlock.Transitions>
                    </TextBlock>                    
                    
                    <TextPresenter Name="PART_TextPresenter"
                                   Margin="7"
                                   Text="{TemplateBinding Text, Mode=TwoWay}"
                                   CaretIndex="{TemplateBinding CaretIndex}"
                                   CaretBrush="{TemplateBinding CaretBrush}"
                                   LineHeight="{TemplateBinding LineHeight}"
                                   TextWrapping="{TemplateBinding TextWrapping}"
                                   PasswordChar="{TemplateBinding PasswordChar}"
                                   LetterSpacing="{TemplateBinding LetterSpacing}"
                                   TextAlignment="{TemplateBinding TextAlignment}"
                                   RevealPassword="{TemplateBinding RevealPassword}"
                                   SelectionBrush="{TemplateBinding SelectionBrush}"
                                   SelectionStart="{TemplateBinding SelectionStart}"
                                   SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                   SelectionEnd="{TemplateBinding SelectionEnd}"
                                   CaretBlinkInterval="{TemplateBinding CaretBlinkInterval}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   HorizontalAlignment="Stretch"/>
                </Grid>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryDisabledForegroundBrush}"></Setter>
        </Style>
        
        <Style Selector="^:disabled Border#Path_Background">
            <Setter Property="Opacity" Value="0.3"></Setter>
        </Style>
        
        <Style Selector="^:pointerover Border#Path_BackgroundBorder">
            <Setter Property="BorderThickness" Value="2,2,2,2"></Setter>
        </Style>
        
        <Style Selector="^:focus Border#Path_BackgroundBorder">
            <Setter Property="BorderThickness" Value="2,2,2,4"></Setter>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBorderBrush}"></Setter>
        </Style>
        
        <Style Selector="^:empty TextBlock#PART_Watermark">
            <Setter Property="Opacity" Value="1"></Setter>
        </Style>
    </Style>
    
    <Style Selector="Border#Path_Background">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.18" Easing="QuinticEaseOut"></DoubleTransition>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Border#Path_BackgroundBorder">
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="BorderThickness" Duration="0:0:0.18" Easing="BackEaseOut"></ThicknessTransition>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TextBox:pointerover Border#Path_Background">
        <Setter Property="Opacity" Value="0.3"></Setter>
    </Style>
    
    <Style Selector="TextBox:focus Border#Path_Background">
        <Setter Property="Opacity" Value="1"></Setter>
    </Style>
</Styles>
