<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Notice"
        xmlns:onePointControls="clr-namespace:OnePointUI.Avalonia.Styling.Controls.OnePointControls">
    <Design.PreviewWith>
        <controls:LoadCard />
    </Design.PreviewWith>

    <Style Selector="controls|LoadCard">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <onePointControls:ProgressRing HorizontalAlignment="Left"
                                                   Background="Transparent"
                                                   Width="36" Height="36"></onePointControls:ProgressRing>
                
                    <onePointControls:LineTextBlock FontSize="22"
                                                    HorizontalAlignment="Left"
                                                    Text="{TemplateBinding BigTitle}"
                                                    Margin="0,12,0,12"></onePointControls:LineTextBlock>
                    
                    <TextBlock Margin="0,0"
                               Text="{TemplateBinding Message}"
                               FontSize="11"></TextBlock>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
