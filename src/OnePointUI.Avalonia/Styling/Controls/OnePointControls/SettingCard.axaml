<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls"
        xmlns:items="clr-namespace:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Items">
    <Design.PreviewWith>
        <StackPanel Width="500" Height="300">
            <controls:SettingCard Header="111"
                                  Description="介绍"
                                  IsFontIcon="False"
                                  ImageIcon="../../../Assets/OnePointUI.Icon.png"
                                  IsClickable="True">
                <ToggleSwitch></ToggleSwitch>
            </controls:SettingCard>
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="controls|SettingCard">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Name="PATH_Button">
                    <items:BorderCard
                                ClipToBounds="True"
                                Padding="0"
                                Name="PATH_Border">
                        <Grid>
                            <Border HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Name="PATH_Background"
                                    IsVisible="{TemplateBinding IsClickable}"
                                    CornerRadius="6"
                                    ClipToBounds="True"
                                    Background="{DynamicResource PrimaryForegroundBrush}"
                                    Opacity="0"></Border>
                            
                            <Border Padding="8">
                                <Grid>
                                    <controls:FontIcon Glyph="{TemplateBinding Glyph}"
                                                       FontSize="28"
                                                       Margin="8,0,0,0"
                                                       IsVisible="{TemplateBinding IsFontIcon}"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"></controls:FontIcon>
                                    
                                    <Image Width="32" Height="32"
                                           Stretch="UniformToFill"
                                           Margin="6,0,0,0"
                                           IsVisible="{TemplateBinding IsNotFontIcon}"
                                           Source="{TemplateBinding ImageIcon}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"></Image>
                                    
                                    <StackPanel VerticalAlignment="Center"
                                                Margin="50,0,0,0">
                                        <ContentPresenter Content="{TemplateBinding Header}"
                                                          FontSize="18">
                                            <ContentPresenter.Styles>
                                                <Style Selector="TextBlock">
                                                    <Setter Property="FontSize"
                                                            Value="18"></Setter>
                                                </Style>
                                            </ContentPresenter.Styles>
                                        </ContentPresenter>
                                        
                                        <ContentPresenter Content="{TemplateBinding Description}">
                                            <ContentPresenter.Styles>
                                                <Style Selector="TextBlock">
                                                    <Setter Property="FontSize"
                                                            Value="12"></Setter>
                                                    <Setter Property="Foreground"
                                                            Value="Gray"></Setter>
                                                </Style>
                                            </ContentPresenter.Styles>
                                        </ContentPresenter>
                                    </StackPanel>
                            
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <ContentControl Content="{TemplateBinding Content}"
                                                        Margin="0,0,12,0"></ContentControl>
                                
                                        <Border IsVisible="{TemplateBinding IsShowActionIcon}">
                                            <controls:FontIcon Glyph="&#xE974;"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"
                                                               IsVisible="{TemplateBinding IsClickable}"
                                                               FontSize="16"></controls:FontIcon>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </items:BorderCard>
                </Button>
            </ControlTemplate>
        </Setter>
        <Setter Property="MinHeight" Value="72"></Setter>
        
        <Style Selector="^ /template/ Border#PATH_Background">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity"
                                      Duration="0:0:0.08"></DoubleTransition>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="^:pointerover /template/ Border#PATH_Background">
            <Setter Property="Opacity" Value="0.1"></Setter>
        </Style>
        
        <Style Selector="^ /template/ Button#PATH_Button">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentControl Content="{TemplateBinding Content}"
                                    Padding="{TemplateBinding Padding}"></ContentControl>
                </ControlTemplate>
            </Setter>
        </Style>
    </Style>
</Styles>
