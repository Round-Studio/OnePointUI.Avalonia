<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Items">
    <Design.PreviewWith>
        <controls:BorderCard />
    </Design.PreviewWith>

    <Style Selector="controls|BorderCard">
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8" />
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border BorderThickness="1"
                            BorderBrush="{DynamicResource PrimaryBackgroundBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Opacity="0.8" />

                    <Border Background="{DynamicResource PrimaryBorderBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="1"
                            Opacity="0.78" />

                    <ContentPresenter Content="{TemplateBinding Content}"
                                      Padding="{TemplateBinding Padding}" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>