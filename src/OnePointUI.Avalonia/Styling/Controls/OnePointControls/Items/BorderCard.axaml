<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Items">
    <Design.PreviewWith>
        <controls:BorderCard />
    </Design.PreviewWith>

    <Style Selector="controls|BorderCard">
        <Setter Property="CornerRadius" Value="6"></Setter>
        <Setter Property="Padding" Value="8"></Setter>
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border BorderThickness="1"
                            BorderBrush="{DynamicResource PrimaryBackgroundBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Opacity="0.8">
                    </Border>
                    
                    <Border Background="{DynamicResource PrimaryBorderBrush}"
                            CornerRadius="5"
                            Margin="1"
                            Opacity="0.6"></Border>
                    
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      Padding="{TemplateBinding Padding}"></ContentPresenter>
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
