<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls">
    <Design.PreviewWith>
        <controls:FontIcon />
    </Design.PreviewWith>

    <Style Selector="controls|FontIcon">
        <Setter Property="FontFamily" Value="resm:OnePointUI.Avalonia.Assets.Fonts.SegoeFluentIcons.ttf?assembly=OnePointUI.Avalonia#Segoe Fluent Icons"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"></Setter>
        
        <Setter Property="Template">
            <ControlTemplate>
                <TextBlock UseLayoutRounding="False"
                           Text="{TemplateBinding Glyph}"
                           FontSize="{TemplateBinding FontSize}"
                           Foreground="{TemplateBinding Foreground}"
                           FontFamily="{TemplateBinding FontFamily}"
                           Background="{TemplateBinding Background}"/>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
