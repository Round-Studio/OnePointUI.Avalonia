<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialog="clr-namespace:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Dialog"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OnePointUI.Avalonia.Styling.Controls.OnePointControls.Dialog.DialogBorder">
    <UserControl.Styles>
        <Style Selector="dialog|DialogBorder">
            <Style.Animations>
                <Animation Duration="0:0:0.48"
                           Easing="ExponentialEaseOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>
    <Border Margin="20"
            CornerRadius="12"
            Background="{DynamicResource PrimaryBackgroundOverBrush}"
            BoxShadow="0 0 10 0 Black">
        <Border ClipToBounds="True"
                CornerRadius="12"
                Name="ContentBorder">
                
        </Border>
    </Border>
</UserControl>
