<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialog="clr-namespace:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Dialog"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             MinWidth="220" MinHeight="180"
             x:Class="OnePointUI.Avalonia.Styling.Controls.OnePointControls.Dialog.DialogContent">
    <UserControl.Styles>
        <Style Selector="dialog|DialogContent">
            <Style.Animations>
                <Animation Duration="0:0:0.48"
                           Easing="ExponentialEaseOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>
    <Grid>
        <Border Margin="20"
                CornerRadius="12"
                Background="{DynamicResource PrimaryBackgroundOverBrush}"
                BoxShadow="0 0 10 0 Black">
            <Border ClipToBounds="True"
                    CornerRadius="12">
                <Grid RowDefinitions="64,*,64">
                    <TextBlock Foreground="{DynamicResource AccentBackgroundBrush}"
                               Margin="20,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Name="TitleBox"
                               FontWeight="Bold">Title</TextBlock>
                    
                    <Border Grid.Row="2" Height="64"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Background="{DynamicResource BackgroundBrush}">
                        <Grid Grid.ColumnDefinitions="Auto,Auto,Auto"
                              HorizontalAlignment="Right"
                              Margin="0,0,20,0">
                            <Button Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Padding="8,2"
                                    Name="SecondaryBtn"
                                    IsVisible="False"
                                    Height="32"></Button>
                            <Button Grid.Column="1" Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Padding="8,2"
                                    Name="PrimaryBtn"
                                    IsVisible="False"
                                    Height="32"></Button>
                            <Button Grid.Column="2" Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Padding="8,2"
                                    Name="CloseBtn"
                                    IsVisible="False"
                                    Click="CloseBtn_OnClick"
                                    Height="32"></Button>
                        </Grid>
                    </Border>
                    
                    <ContentControl Grid.Row="1"
                                    Name="ContentBox"
                                    Margin="20,0,20,20">
                        
                    </ContentControl>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
