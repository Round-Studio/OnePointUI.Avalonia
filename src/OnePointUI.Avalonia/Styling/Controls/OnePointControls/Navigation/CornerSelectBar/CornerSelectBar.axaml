<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Navigation.CornerSelectBar">
    <Design.PreviewWith>
        <controls:CornerSelectBar />
    </Design.PreviewWith>

    <Style Selector="controls|CornerSelectBar">
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Margin="5,0" Spacing="8" Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </Setter>
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <ItemsPresenter Name="PART_ItemsPresenter"
                                ItemsPanel="{TemplateBinding ItemsPanel}" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>