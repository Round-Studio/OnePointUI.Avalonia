<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OnePointUI.Avalonia.Styling.Controls.OnePointControls.Navigation.SelectBar"
        xmlns:onePointControls="clr-namespace:OnePointUI.Avalonia.Styling.Controls.OnePointControls">
    <Design.PreviewWith>
        <controls:SelectBar>
            <controls:SelectBarItem ItemText="111"></controls:SelectBarItem>
            <controls:SelectBarItem ItemText="111"></controls:SelectBarItem>
            <controls:SelectBarItem ItemText="111"></controls:SelectBarItem>
        </controls:SelectBar>
    </Design.PreviewWith>

    <Style Selector="controls|SelectBarItem">
        <Setter Property="CornerRadius" Value="6"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"></Setter>
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border CornerRadius="{TemplateBinding CornerRadius}"
                            Name="PART_Background"
                            Background="{DynamicResource PrimaryBackgroundOverBrush}"
                            Opacity="0.000001">
                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity"
                                                  Duration="0:0:0.38"
                                                  Easing="QuarticEaseOut"></DoubleTransition>
                            </Transitions>
                        </Border.Transitions>
                    </Border>
                    
                    <Border CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="True"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Panel>
                            <Border Width="0"
                                    Name="PART_AccentBackground"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                                    Height="4"
                                    Margin="0,3,0,-3"
                                    CornerRadius="5,5,0,0"
                                    Opacity="0"
                                    Background="{DynamicResource AccentBackgroundBrush}">
                                <Border.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Width"
                                                          Duration="0:0:0.42"
                                                          Easing="ExponentialEaseOut"></DoubleTransition>
                                        
                                        <DoubleTransition Property="Opacity"
                                                          Duration="0:0:0.6"
                                                          Easing="QuarticEaseOut"></DoubleTransition>
                                        
                                        <ThicknessTransition Property="Margin"
                                                          Duration="0:0:0.3"
                                                          Easing="QuarticEaseOut"></ThicknessTransition>
                                    </Transitions>
                                </Border.Transitions>
                            </Border>
                        </Panel>
                    </Border>
                    
                    <Border CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="0,12">
                        <StackPanel Orientation="Horizontal">
                            <onePointControls:FontIcon Glyph="{TemplateBinding Glyph}"
                                                       Name="PART_Icon"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,8,0">
                                <onePointControls:FontIcon.Transitions>
                                    <Transitions>
                                        <ThicknessTransition Property="Margin"
                                                             Duration="0:0:0.3"
                                                             Easing="QuarticEaseOut"></ThicknessTransition>
                                        
                                        <BrushTransition Property="Foreground"
                                                             Duration="0:0:0.3"
                                                             Easing="QuarticEaseOut"></BrushTransition>
                                    </Transitions>
                                </onePointControls:FontIcon.Transitions>
                            </onePointControls:FontIcon>
                        </StackPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:selected">
            <Style Selector="^ /template/ Border#PART_AccentBackground">
                <Setter Property="Width" Value="22"></Setter>
                <Setter Property="Margin" Value="0"></Setter>
                <Setter Property="Opacity" Value="1"></Setter>
            </Style>
            
            <Style Selector="^ /template/ TextBlock#PART_Text">
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
            
            <Style Selector="^ /template/ onePointControls|FontIcon#PART_Icon">
                <Setter Property="Foreground" Value="{DynamicResource AccentBackgroundBrush}"></Setter>
                <Setter Property="Margin" Value="8,-1,8,1"></Setter>
            </Style>
        </Style>
            
        <Style Selector="^:pointerover /template/ Border#PART_Background">
            <Setter Property="Opacity" Value="0.000001"></Setter>
        </Style>
    </Style>
</Styles>
